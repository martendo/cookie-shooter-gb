DEF FADE_COUNTDOWN_MASK EQU %00000111
DEF FADE_PHASE_FRAMES EQU 6
ASSERT FADE_PHASE_FRAMES <= FADE_COUNTDOWN_MASK

DEF FADE_DIRECTION_BIT EQU 6
DEF FADE_DIRECTION_MASK EQU 1 << FADE_DIRECTION_BIT

DEF FADE_MIDWAY_BIT EQU 7

DEF FADE_OUT EQU 0 << FADE_DIRECTION_BIT
DEF FADE_IN EQU 1 << FADE_DIRECTION_BIT

DEF NOT_FADING EQU -1
