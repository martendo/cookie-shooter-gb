; Hardware-related
ASSERT LCDCF_OBJON & (1 << 1) != 0
DEF LCDCB_OBJ EQU 1

DEF STAT_MODE_MASK EQU %00000011

DEF DMA_LOOP_CYCLES EQU 1 + 3

; Game states
RSRESET
DEF GAME_STATE_TITLE_SCREEN RB 1
DEF GAME_STATE_MODE_SELECT RB 1
DEF GAME_STATE_IN_GAME RB 1
DEF GAME_STATE_GAME_OVER RB 1
DEF GAME_STATE_PAUSED RB 1
DEF INITIAL_GAME_STATE EQU GAME_STATE_TITLE_SCREEN

DEF GAME_START_DELAY_FRAMES EQU 64

; Game modes
RSRESET
DEF GAME_MODE_CLASSIC RB 1
DEF GAME_MODE_SUPER RB 1
DEF GAME_MODE_COUNT EQU _RS
DEF DEFAULT_GAME_MODE EQU GAME_MODE_CLASSIC

; Status bar
DEF STATUS_BAR_TILE_HEIGHT EQU 2
DEF STATUS_BAR_HEIGHT EQU STATUS_BAR_TILE_HEIGHT * 8

DEF NUMBER_TILES_START EQU $01

DEF vScore EQU _SCRN0 + (1 * SCRN_VX_B) + 0
DEF vCookiesBlasted EQU _SCRN0 + (1 * SCRN_VX_B) + SCRN_X_B - (2 * 2)  ; hCookiesBlasted = 2 bytes * 2 digits

; "Paused" strip
DEF PAUSED_STRIP_TILE_HEIGHT EQU 4
DEF PAUSED_STRIP_HEIGHT EQU PAUSED_STRIP_TILE_HEIGHT * 8
DEF PAUSED_STRIP_TILE_Y EQU (SCRN_Y_B / 2) - (PAUSED_STRIP_TILE_HEIGHT / 2)
DEF PAUSED_STRIP_Y EQU PAUSED_STRIP_TILE_Y * 8
DEF vPausedStrip EQU _SCRN0 + (PAUSED_STRIP_TILE_Y * SCRN_VX_B)

; Game mode select
DEF MODE_SELECT_NUMBER_TILES_START EQU $29
DEF vModeSelectClassicHighScore EQU _SCRN0 + (9 * SCRN_VX_B) + 4
DEF vModeSelectSuperHighScore EQU _SCRN0 + (16 * SCRN_VX_B) + 4

DEF MODE_SELECT_CLASSIC_CURSOR_Y EQU (5 * 8) + 16
DEF MODE_SELECT_SUPER_CURSOR_Y EQU (12 * 8) + 16
DEF MODE_SELECT_CURSOR_X EQU (1 * 8) + 8

DEF MODE_SELECT_CURSOR_Y1_OFFSET EQU (sizeof_OAM_ATTRS * 0) + 0
DEF MODE_SELECT_CURSOR_Y2_OFFSET EQU (sizeof_OAM_ATTRS * 1) + 0

; In-game
DEF IN_GAME_BACKGROUND_TILE EQU 0

; Game over high score
DEF vGameOverHighScore EQU _SCRN0 + (15 * SCRN_VX_B) + 7
DEF GAME_OVER_NUMBER_TILES_START EQU $EF
DEF NEW_HIGH_SCORE_Y EQU STATUS_BAR_HEIGHT + 96 + 16
DEF NEW_HIGH_SCORE_X EQU 20 + 8
DEF NEW_HIGH_SCORE_TILE EQU 26

; Player's lives
DEF HEART_WIDTH EQU 8
DEF HEART_HEIGHT EQU 16

DEF HEART_START_Y EQU STATUS_BAR_HEIGHT + 8 + 16
DEF HEART_X EQU 8 + 8
DEF HEART_TILE EQU 24

; Save Data
DEF SAVE_DATA_HEADER EQUS "\"CKSH\""

; Score
DEF SCORE_BYTE_COUNT EQU 3
