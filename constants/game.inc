; Game states
RSRESET
DEF GAME_STATE_TITLE_SCREEN RB 1
DEF GAME_STATE_IN_GAME RB 1
DEF GAME_STATE_GAME_OVER RB 1
DEF GAME_STATE_PAUSED RB 1

DEF GAME_START_DELAY_FRAMES EQU 64

; Status bar
DEF STATUS_BAR_TILE_HEIGHT EQU 2
DEF STATUS_BAR_HEIGHT EQU STATUS_BAR_TILE_HEIGHT * 8

DEF NUMBER_TILES_START EQU $01

DEF vScore EQU _SCRN0 + (1 * SCRN_VX_B) + 0
DEF vCookiesBlasted EQU _SCRN0 + (1 * SCRN_VX_B) + SCRN_X_B - (2 * 2)  ; hCookiesBlasted = 2 bytes * 2 digits

; "Paused" strip
DEF PAUSED_STRIP_TILE_Y EQU SCRN_Y_B / 2
DEF PAUSED_STRIP_Y EQU PAUSED_STRIP_TILE_Y * 8
DEF PAUSED_STRIP_HEIGHT EQU 8
DEF vPausedStrip EQU _SCRN0 + (PAUSED_STRIP_TILE_Y * SCRN_VX_B)

; In-game
DEF IN_GAME_BACKGROUND_TILE EQU 0

; Game over high score
DEF vHighScore EQU _SCRN0 + (15 * SCRN_VX_B) + 7
DEF GAME_OVER_NUMBER_TILES_START EQU $EF
DEF NEW_HIGH_SCORE_Y EQU STATUS_BAR_HEIGHT + 96 + 16
DEF NEW_HIGH_SCORE_X EQU 20 + 8
DEF NEW_HIGH_SCORE_TILE EQU 26

; Player's lives
DEF HEART_WIDTH EQU 8
DEF HEART_HEIGHT EQU 16

DEF HEART_START_Y EQU STATUS_BAR_HEIGHT + 8 + 16
DEF HEART_X EQU 8 + 8
DEF HEART_TILE EQU 24

; Save Data
DEF SAVE_DATA_HEADER EQUS "\"CKSH\""
