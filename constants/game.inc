; Game states
RSRESET
DEF GAME_STATE_TITLE_SCREEN RB 1
DEF GAME_STATE_ACTION_SELECT RB 1
DEF GAME_STATE_MODE_SELECT RB 1
DEF GAME_STATE_IN_GAME RB 1
DEF GAME_STATE_TOP_SCORES RB 1
DEF GAME_STATE_GAME_OVER RB 1
DEF GAME_STATE_PAUSED RB 1
DEF GAME_STATE_COUNT EQU _RS
DEF INITIAL_GAME_STATE EQU GAME_STATE_TITLE_SCREEN

DEF GAME_START_DELAY_FRAMES EQU 64

; Game actions
RSRESET
DEF ACTION_PLAY RB 1
DEF ACTION_TOP_SCORES RB 1
DEF ACTION_COUNT EQU _RS
DEF DEFAULT_ACTION EQU ACTION_PLAY

; Game modes
RSRESET
DEF GAME_MODE_CLASSIC RB 1
DEF GAME_MODE_SUPER RB 1
DEF GAME_MODE_COUNT EQU _RS
DEF DEFAULT_GAME_MODE EQU GAME_MODE_CLASSIC

; Status bar
DEF STATUS_BAR_TILE_HEIGHT EQU 2
DEF STATUS_BAR_HEIGHT EQU STATUS_BAR_TILE_HEIGHT * 8

DEF NUMBER_TILES_START EQU $01

DEF vScore EQU _SCRN0 + (1 * SCRN_VX_B) + 0
DEF vCookiesBlasted EQU _SCRN0 + (1 * SCRN_VX_B) + SCRN_X_B - (2 * 2)  ; hCookiesBlasted = 2 bytes * 2 digits

; "Paused" strip
DEF PAUSED_STRIP_TILE_HEIGHT EQU 4
DEF PAUSED_STRIP_HEIGHT EQU PAUSED_STRIP_TILE_HEIGHT * 8
DEF PAUSED_STRIP_TILE_Y EQU (SCRN_Y_B / 2) - (PAUSED_STRIP_TILE_HEIGHT / 2)
DEF PAUSED_STRIP_Y EQU PAUSED_STRIP_TILE_Y * 8
DEF vPausedStrip EQU _SCRN1 + (PAUSED_STRIP_TILE_Y * SCRN_VX_B)

; In-game
DEF IN_GAME_BACKGROUND_TILE EQU 0

; Score & Cookies blasted
DEF SCORE_BYTE_COUNT EQU 3
DEF COOKIES_BLASTED_BYTE_COUNT EQU 2

; Player's lives
DEF HEART_TILE_WIDTH EQU 1
DEF HEART_TILE_HEIGHT EQU 2

DEF HEART_TILE1 EQU 12
DEF HEART_TILE2 EQU 23

DEF HEARTS_TILE_OFFSET_Y EQU 1
DEF HEARTS_TILE_OFFSET_X EQU 1
DEF vHearts EQU _SCRN0 + ((STATUS_BAR_TILE_HEIGHT + HEARTS_TILE_OFFSET_Y) * SCRN_VX_B) + HEARTS_TILE_OFFSET_X
