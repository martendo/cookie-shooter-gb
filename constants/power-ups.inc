; Power-up type values
RSRESET
DEF NO_POWER_UP RB 1
DEF POWER_UPS_START EQU _RS
DEF POWER_UP_FAST_LASERS RB 1
DEF POWER_UP_BOMB RB 1
DEF POWER_UP_SLOW_COOKIES RB 1
DEF POWER_UP_DOUBLE_LASERS RB 1
DEF ONE_TIME_POWER_UPS_START EQU _RS
DEF POWER_UP_EXTRA_LIFE RB 1
DEF POWER_UP_COUNT EQU _RS

DEF NO_POWER_UP_DURATION EQU HIGH(-1)
DEF POWER_UP_END_FLASH_START EQU 3 seconds
DEF POWER_UP_END_FLASH_BIT EQU 4        ; 16 frames (%10000)
DEF POWER_UP_END_FLASH_MASK EQU (2 ** POWER_UP_END_FLASH_BIT) - 1
DEF POWER_UP_END_FLASH_FAST_START EQU 1 seconds
DEF POWER_UP_END_FLASH_FAST_BIT EQU 3   ; 8 frames (%1000)
DEF POWER_UP_END_FLASH_FAST_MASK EQU (2 ** POWER_UP_END_FLASH_FAST_BIT) - 1

DEF MAX_POWER_UP_COUNT EQU 3

DEF POWER_UP_TILE_WIDTH EQU 2
DEF POWER_UP_TILE_HEIGHT EQU 2

DEF POWER_UP_TILE_OFFSET_Y EQU 1
DEF POWER_UP_TILE_OFFSET_X EQU 1

DEF POWER_UP_TILE_COUNT EQU POWER_UP_TILE_WIDTH * POWER_UP_TILE_HEIGHT
DEF POWER_UP_TILES_START EQU 45
DEF POWER_UP_SELECTED_TILES_START EQU POWER_UP_TILES_START + (POWER_UP_COUNT * POWER_UP_TILE_COUNT)
DEF POWER_UP_CURRENT_TILES_START EQU POWER_UP_SELECTED_TILES_START + (POWER_UP_COUNT * POWER_UP_TILE_COUNT)

DEF vPowerUps EQU _SCRN0 + ((STATUS_BAR_TILE_HEIGHT + POWER_UP_TILE_OFFSET_Y) * SCRN_VX_B) + SCRN_X_B - (POWER_UP_TILE_OFFSET_X + POWER_UP_TILE_WIDTH)
DEF vCurrentPowerUp EQU _SCRN0 + (SCRN_X_B / 2) - (POWER_UP_TILE_WIDTH / 2)
